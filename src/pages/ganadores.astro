---
import Layout from '../layouts/Layout.astro';
import Navbar from '../layouts/Navbar.astro';
import Footer from '../layouts/Footer.astro';
import categories from '../data/categories';
// Asegúrate de tener esta función en tu lib/voting.ts
import { getWinners } from '../lib/voting';

// --- CONFIGURACIÓN DEL EVENTO ---
const STREAM_ID = "sLfmFxlv7LY"; 
const EVENT_ID_2025 = '856a7c16-5436-4776-a844-04dcaafb4656'; // UUID Real

// Obtener datos reales
const winnersData = await getWinners(EVENT_ID_2025);

// Helper para imágenes
const getOptimizedUrl = (url: string) => {
  if (!url) return "/img/lag_uconstr_placeholder.png";
  if (url.includes("res.cloudinary.com")) {
    return url.replace("/upload/", "/upload/w_500,f_auto,q_auto/");
  }
  return url;
};

// Procesar ganadores
const winnersEnriched = categories.map(cat => {
    const winnerInfo = winnersData.find((w: any) => w.category_id === cat.id);
    
    if (!winnerInfo) return null; 

    const nomineeDetails = cat.nominees.find(n => n.name === winnerInfo.nominee_name);

    return {
        category: cat,
        winnerName: winnerInfo.nominee_name,
        votes: winnerInfo.vote_count,
        details: nomineeDetails || { 
            image: '/img/tl_logo.png', 
            description: 'Ganador indiscutible.', 
            creator: 'Comunidad',
            youtubeId: '',
            video: ''
        }
    };
}).filter(item => item !== null);
---

<Layout title="Ganadores - LAG AWARDS">
  <Navbar />
  
  <main 
    id="premiacion-container"
    data-stream-id={STREAM_ID}
    class="pt-24 min-h-screen text-white relative overflow-hidden bg-[#050505]"
  >
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-900/20 via-black to-black -z-10"></div>
    <div class="absolute top-0 left-0 w-full h-full bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:4rem_4rem] pointer-events-none"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-[500px] bg-yellow-600/20 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 md:px-6 py-12 flex flex-col items-center">
      
      <div class="w-full max-w-[1600px] mb-24 animate-fade-in-up">
            
            <div class="text-center mb-16">
                <div class="inline-flex items-center gap-2 px-4 py-1 rounded-full bg-yellow-600/10 border border-yellow-500/30 mb-6">
                    <span class="text-yellow-400 font-mono text-sm font-bold tracking-widest uppercase">Resultados Oficiales</span>
                </div>

                <h1 class="text-6xl md:text-8xl font-black font-orbitron text-transparent bg-clip-text bg-linear-to-b from-yellow-100 via-yellow-400 to-yellow-800 drop-shadow-[0_0_35px_rgba(234,179,8,0.5)]">
                    GANADORES
                </h1>
                <p class="text-xl text-yellow-100/60 mt-4 font-light tracking-wide max-w-2xl mx-auto">
                    La comunidad ha hablado. Estos son los elegidos para la gloria eterna en los LAG Awards 2025.
                </p>
            </div>

            {winnersEnriched.length > 0 ? (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-10 px-4">
                    {winnersEnriched.map((item, index) => (
                        <div class="group relative perspective-1000" style={`animation-delay: ${index * 100}ms`}>
                            
                            <div class="absolute -inset-0.5 bg-gradient-to-r from-yellow-600 via-orange-500 to-yellow-600 rounded-2xl blur opacity-20 group-hover:opacity-100 transition duration-500 group-hover:duration-200"></div>
                            
                            <div class="relative h-full bg-[#0a0a0a] border border-yellow-500/30 rounded-2xl overflow-hidden flex flex-col hover:-translate-y-2 transition-transform duration-500 shadow-2xl">
                                
                                <div class="absolute top-0 left-0 right-0 z-20 p-4 flex justify-between items-start bg-gradient-to-b from-black/80 to-transparent">
                                    <div class="bg-black/40 backdrop-blur-md border border-yellow-500/20 px-3 py-1 rounded-full">
                                        <span class="text-[10px] font-bold text-yellow-100 tracking-widest uppercase">{item.category.title}</span>
                                    </div>
                                    <span class="text-3xl drop-shadow-md">{item.category.icon}</span>
                                </div>

                                <div class="relative h-64 overflow-hidden">
                                    {item.details.youtubeId ? (
                                        <img 
                                            src={`https://img.youtube.com/vi/${item.details.youtubeId}/hqdefault.jpg`} 
                                            alt={item.winnerName} 
                                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 filter brightness-90 group-hover:brightness-110"
                                        />
                                    ) : (
                                        <img 
                                            src={getOptimizedUrl(item.details.image || (item.details.video ? item.details.video.replace(/\.[^/.]+$/, ".jpg") : '')) || '/img/tl_logo.png'} 
                                            alt={item.winnerName} 
                                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 filter brightness-90 group-hover:brightness-110"
                                        />
                                    )}
                                    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/20 to-transparent"></div>
                                </div>

                                <div class="p-6 pt-2 flex-grow flex flex-col relative">
                                    <div class="absolute -top-10 left-1/2 -translate-x-1/2 bg-gradient-to-br from-yellow-300 to-yellow-600 w-14 h-14 flex items-center justify-center rounded-full shadow-[0_0_20px_rgba(234,179,8,0.5)] border-4 border-[#0a0a0a] z-30">
                                        <svg class="w-7 h-7 text-black" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                                    </div>

                                    <div class="mt-6 text-center">
                                        <h3 class="text-2xl font-black font-orbitron text-white mb-1 leading-none drop-shadow-md">
                                            {item.winnerName}
                                        </h3>
                                        {item.details.creator && (
                                            <p class="text-xs text-yellow-500/80 font-bold uppercase tracking-wider mb-3">
                                                {item.details.creator}
                                            </p>
                                        )}
                                        <p class="text-sm text-gray-400 italic line-clamp-2 px-2">
                                            "{item.details.description}"
                                        </p>
                                    </div>

                                    <div class="mt-auto pt-6 w-full">
                                        <div class="flex justify-between items-center border-t border-white/10 pt-3">
                                            <span class="text-[10px] text-gray-500 uppercase font-bold">Votos Finales</span>
                                            <span class="text-xl font-mono font-bold text-yellow-400">{item.votes}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            ) : (
                <div class="text-center py-20 bg-white/5 rounded-3xl border border-white/10">
                    <p class="text-gray-400 text-xl">Calculando resultados de la votación...</p>
                </div>
            )}
      </div>

      <div class="w-full max-w-[1800px] relative group mb-12 animate-fade-in">
        
        <div class="flex items-center justify-center gap-4 mb-8">
            <div class="h-px w-full max-w-xs bg-gradient-to-r from-transparent via-red-900 to-transparent"></div>
            <span class="text-red-500 font-bold font-orbitron tracking-widest text-sm uppercase">Transmisión del Evento</span>
            <div class="h-px w-full max-w-xs bg-gradient-to-r from-transparent via-red-900 to-transparent"></div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 bg-[#0a0a0a] p-2 md:p-4 rounded-3xl border border-white/10 shadow-2xl">
            
            <div class="lg:col-span-2 relative rounded-xl overflow-hidden bg-black aspect-video lg:aspect-auto lg:h-[75vh]">
                <iframe 
                    class="w-full h-full"
                    src={`https://www.youtube.com/embed/${STREAM_ID}?autoplay=0&mute=0&rel=0&modestbranding=1`} 
                    title="LAG AWARDS LIVE" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                    allowfullscreen>
                </iframe>
            </div>

            <div class="lg:col-span-1 bg-[#111] rounded-xl overflow-hidden flex flex-col h-[600px] lg:h-auto border border-white/5 shadow-inner">
                <div class="bg-[#161616] p-4 border-b border-white/10 flex justify-between items-center">
                    <span class="font-bold text-gray-300 text-sm uppercase tracking-widest">Chat de la Comunidad</span>
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                        <span class="text-xs text-red-500 font-bold">LIVE</span>
                    </div>
                </div>
                
                <div id="chat-container" class="flex-1 bg-[#0a0a0a] relative">
                    <div class="absolute inset-0 flex items-center justify-center text-gray-600 text-xs">
                        Cargando chat...
                    </div>
                    <iframe id="live-chat-iframe" class="relative z-10 w-full h-full" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <div class="mt-4 flex justify-end">
            <a href={`https://youtube.com/watch?v=${STREAM_ID}`} target="_blank" class="px-6 py-2 bg-white/5 hover:bg-white/10 text-gray-300 hover:text-white text-sm font-bold rounded-lg transition-colors flex items-center gap-2 border border-white/10">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
                Ver en YouTube
            </a>
        </div>
      </div>

    </div>
  </main>
  <Footer />
</Layout>

<script>
  import confetti from 'canvas-confetti';

  document.addEventListener("astro:page-load", () => {
      // 1. LEER DATOS
      const container = document.getElementById('premiacion-container');
      if (!container) return;

      const streamId = container.dataset.streamId || '';

      // 2. CHAT SETUP
      const setupChat = () => {
          const chatIframe = document.getElementById('live-chat-iframe') as HTMLIFrameElement;
          if (chatIframe && streamId) {
              const domain = window.location.hostname;
              chatIframe.src = `https://www.youtube.com/live_chat?v=${streamId}&embed_domain=${domain}`;
          }
      };

      setupChat();

      // 3. CONFETI AUTOMÁTICO (Celebración al entrar)
      const duration = 2000;
      const end = Date.now() + duration;

      (function frame() {
          confetti({
              particleCount: 5,
              angle: 60,
              spread: 55,
              origin: { x: 0 },
              colors: ['#eab308', '#ffffff'] // Dorado y blanco
          });
          confetti({
              particleCount: 5,
              angle: 120,
              spread: 55,
              origin: { x: 1 },
              colors: ['#eab308', '#ffffff']
          });

          if (Date.now() < end) {
              requestAnimationFrame(frame);
          }
      }());
  });
</script>